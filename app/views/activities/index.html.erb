<div class="container">
<div class="row">
<div class="col-md-12">
<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th>Description</th>
      <th>Type</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contact.activities.each do |activity| %>
      <tr>
        <td><%= activity.description %></td>
        <td><%= activity.activity_type %></td>
        <td><%= activity.updated_at.strftime("%d %B")[0..5] %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

</div>

</div>

</div>