<div class="container">
 <div class="row">
    <div class="col-md-12">
      <h3>SupaSales</h3>

      <br>
    </div>
  </div>


  <div class="row">
    <div class="col-md-12 text-center">
      <h1>Generic Company Logo</h1>
      <br>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 ">
      <input type="search" ng-model="q" placeholder="Search ..." class="form-control"/>
    </div>
    <div class="col-md-2 col-md-offset-2">
      <a href="/contacts/new/"><i class="fa fa-plus-circle" style="color:#060"></i> New Contact </a>
    </div>
    <div class="col-md-2">
      <a href="/contacts/new/"><i class="fa fa-share-square"></i>
      Export</a>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div ng-init="contacts = <%= @contacts.each.to_json  %>
        ">
        <table class="table">
          <thead>
            <tr>
              <th>Contact</th>
              
              
              <th>Company</th>
              <th>Phone</th>
              <th>Email</th>
              <th>Notes</th>
            </tr>
          </thead>
          <tbody>
            <tr class="animate-repeat" ng-repeat="contact in contacts | filter:q as results">
              <td><a href="/contacts/{{contact.id}}">{{contact.first_name}} {{contact.last_name}} </a>  </td>
              <td>{{contact.company_name }}  </td>
              <td>{{contact.telephone }}  </td>
              
              <td>{{contact.email }}  </td>
              
              <td>
              
              <a href="#" remote="true" data-toggle="modal" data-target="#modal-window" data-backdrop="true"> 

                  <i class="fa fa-file"></i>
              </a>






              </td>
              <td>
                
              </td>
            </tr>
            <li class="animate-repeat" ng-if="results.length == 0">
              <strong>No results found...</strong>
            </li>
          </tbody>
        </table>
      </div>
      <br>
    </div>
  </div>

  <!-- modal -->
  <div class="modal fade" id="modal-window">
    <div class="modal-dialog" >
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true"> &times;</button>
          <h3 class="modal-title">Modal title</h3>
        </div>
        <div class="modal-body"></div>
        <div class="modal-footer">

        </div>
      </div>
    </div>
  </div>
  <!-- /.modal -->



</div>