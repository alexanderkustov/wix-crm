<div class="container">
  <div class="row">
    <div class="col-md-12 text-center">


      <h1>Welcome to Wix CRM</h1>
</div>
</div>
<div class="row">
<div class="col-md-6">
 <%= link_to 'New Contact', new_contact_path, :class => "btn btn-primary btn-lg" %>

</div>
<div class="col-md-6">

        <input type="search" ng-model="q" placeholder="Search" class="form-control"/>

</div>
</div>
<div class="row">
<div class="col-md-12">
 <div ng-init="contacts = <%= @contacts.each.to_json  %>
        ">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>First name</th>
              <th>Last name</th>
              <th>Email</th>
              <th>Company name</th>
              <th>Job title</th>
              <th>Telephone</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
           <tr class="animate-repeat" ng-repeat="contact in contacts | filter:q as results">
             <td><a href="/contacts/{{contact.id}}">{{contact.first_name}}</a>  </td>
             <td>{{contact.last_name}}  </td>

             <td>{{contact.email }}  </td>
             <td>{{contact.company_name }}  </td>
             <td>{{contact.job_title }}  </td>
             <td>{{contact.telephone }}  </td>
             <td>
              <a  class="btn btn-warning" href="contacts/{{contact.id}}/edit">Edit</a> 
             </td>
             <td>

            <a href="contacts/{{contact.id}}" class="btn btn-danger" data-confirm="You sure?" data-method="delete" rel="nofollow" title="Seriously delete this guy?">Delete</a>

             </td>
           </tr>
           <li class="animate-repeat" ng-if="results.length == 0">
            <strong>No results found...</strong>
          </li>
        </tbody>
      </table>
    </div>

    <br>





  </div>
</div>
</div>