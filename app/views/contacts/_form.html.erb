<%= form_for(@contact) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
  <div class="col-md-12 text-center">
 
    <img src="<%= image_path "default-avatar.png" %>" class="img-circle img-thumbnail" id="hoverUpload" style="height:150px; margin-bottom:10px;">          
  </div>


  <div class="field">
    
    <%= f.text_field :first_name, :class => "form-control", :placeholder => "First Name" %>

    <br>
 
    <%= f.text_field :last_name, :class => "form-control", :placeholder => "Last Name" %>
 <br> 
    <%= f.text_field :email, :class => "form-control", :placeholder => "Email" %>
<br>
    <%= f.text_field :company_name , :class => "form-control", :placeholder => "Company Name" %>
<br>
    <%= f.text_area :notes , :class => "form-control", :placeholder => "Notes" %>
<br>

   
    <%= f.text_field :job_title , :class => "form-control", :placeholder => "Job Title" %>
<br>
    <%= f.text_field :telephone , :class => "form-control" ,:placeholder => "Telephone"  %>
  </div>
  <div class="actions text-center">
  <br>
    <%= f.submit "Submit Contact", {:class => "btn btn-green btn-success" } %>
  </div>
<% end %>
